<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <View
        android:id="@+id/greenBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fgreen" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




    <TextView
        android:layout_width="486dp"
        android:layout_height="90dp"
        android:paddingLeft="210dp"
        android:paddingTop="15dp"
        android:paddingRight="11dp"
        android:paddingBottom="34dp"
        android:text="TRIVA"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/cova"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="33dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="33dp"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="290dp"
        android:layout_height="89dp"
        android:paddingLeft="150dp"
        android:paddingTop="1dp"
        android:paddingRight="26dp"
        android:paddingBottom="8dp"
        android:text="REGISTER"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintVertical_bias="0.04"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="357dp"
        android:layout_height="64dp"
        android:background="@drawable/shape_rounded"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        tools:layout_editor_absoluteY="150dp"


        app:layout_constraintTop_toBottomOf="@+id/line3"
        app:layout_constraintStart_toStartOf="@+id/line2"
        app:layout_constraintEnd_toEndOf="@+id/line2"
        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:background="@color/green" android:textSize="20dp"  android:textColor="@color/white"
            android:text="Username" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:background="@color/green"  android:textSize="20dp"  android:textColor="@color/white"
            android:text="Triva"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="357dp"
        android:layout_height="64dp"
        android:background="@drawable/shape_rounded"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/line3"
        tools:ignore="MissingConstraints">





    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:background="@color/green" android:textSize="20dp"  android:textColor="@color/white"
            android:text="Email"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="357dp"
        android:layout_height="64dp"
        android:background="@drawable/shape_rounded"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        tools:layout_editor_absoluteY="285dp"

        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintStart_toStartOf="@+id/line2"
        app:layout_constraintEnd_toEndOf="@+id/line2"
        tools:ignore="MissingConstraints">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:background="@color/green" android:textSize="20dp"  android:textColor="@color/white"
            android:text="Password"/>



    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="308dp"
        android:layout_height="67dp"
        android:backgroundTint="@color/white"

        tools:layout_editor_absoluteY="419dp"
        android:text="Next"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintStart_toStartOf="@+id/line2"
        app:layout_constraintEnd_toEndOf="@+id/line2"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />






    <ImageView
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_2"
        app:layout_constraintStart_toStartOf="@+id/text1"
        app:layout_constraintTop_toTopOf="@+id/text1"/>



    <ImageView
        android:layout_width="22dp"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_3"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/button"/>

    />
    <ImageView
        android:id="@+id/cova"
        android:layout_width="185dp"
        android:layout_height="155dp"
        android:layout_margin="25dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_4"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="398dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
